<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ali.dao.SysCityDao">

    <resultMap type="com.ali.entity.SysCity" id="SysCityMap">
        <result property="cityid" column="cityid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysCityMap">
        select
          cityid, name, pid
        from car.sys_city
        where cityid = #{cityid}
    </select>

    <select id="queryCart" resultMap="SysCityMap">
        select * from car.sys_city where pid=0
    </select>

    <select id="queryCartByPid" resultMap="SysCityMap">
        select * from car.sys_city where pid=#{pid}
    </select>

    <select id="queryCartAddressByCityid" resultMap="SysCityMap">
        select c.cityid,c.name cname,a.name address,a.cityid pid from (select * from sys_city where pid=0) c ,(select * from sys_city where pid!=0) a
        where c.cityid=a.pid and c.cityid=#{cityid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysCityMap">
        select
          cityid, name, pid
        from car.sys_city
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysCityMap">
        select
        cityid, name, pid
        from car.sys_city
        <where>
            <if test="cityid != null">
                and cityid = #{cityid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cityid" useGeneratedKeys="true">
        insert into car.sys_city(name, pid)
        values (#{name}, #{pid})
    </insert>

    <insert id="insertBatch" keyProperty="cityid" useGeneratedKeys="true">
        insert into car.sys_city(name, pid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.pid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="cityid" useGeneratedKeys="true">
        insert into car.sys_city(name, pid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.pid})
        </foreach>
        on duplicate key update
        name = values(name) , pid = values(pid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update car.sys_city
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
        </set>
        where cityid = #{cityid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from car.sys_city where cityid = #{cityid}
    </delete>

</mapper>